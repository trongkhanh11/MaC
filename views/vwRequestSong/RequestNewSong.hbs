<section id="post">
  <div class="container">
    <h1 class="title">Request New Song</h1>
    <form method="post" action="" id="newPost">
      <div class="row">
        <div class="col-20">
          <label for="songName">Name of song:</label>
        </div>
        <div class="col-80">
          <input
            type="text"
            id="songName"
            name="songName"
            placeholder="Enter song name..."
          />
        </div>
      </div>
      <div class="row">
        <div class="col-20">
          <label for="singer">Singer:</label>
        </div>
        <div class="col-80">
          <input
            type="text"
            id="singer"
            name="singer"
            placeholder="Name of the singer performing this song..."
          />
        </div>
      </div>
      <div class="row">
        <div class="col-20">
          <label for="genre">Genre:</label>
        </div>
        <div class="col-80">
          <input
            type="text"
            id="genre"
            name="genre"
            placeholder="Music genre..."
          />
        </div>
      </div>
      <br />
      <input
        type="submit"
        value=" Send Request"
        formaction="RequestNewSong/request"
        class="btn"
      />
    </form>
  </div>
</section>