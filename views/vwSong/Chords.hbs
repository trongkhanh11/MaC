<section id="Song">
    <div class="container">   
        <h1 class="Name_song">
            {{list.0.TENBAIHAT}}
        </h1>
        <div class="infor-song-form">
            <div class="Lyrics">
                <pre>{{list.0.CHORD}}</pre>
            </div> 
            <div class="infor-form">
                <div class="infor-song">
                    <h3 class="title-infor">Thông tin bài hát</h3>
                    <p>Singer: {{list.0.CASY}}</p>
                    <p>Genre: {{list.0.THELOAI}}</p>
                    <p>Poster: {{list.0.NGUOIDANG}}</p>
                    <div class="song-rating">
                    <h3 class="rate">Rate:</h3>
                    <div id="rating">
                        <div class="star-rating">
                            <input type="radio" name="rate" id="rate-5">
                            <label for="rate-5" class="fa fa-star"></label>
                            <input type="radio" name="rate" id="rate-4">
                            <label for="rate-4" class="fa fa-star"></label>
                            <input type="radio" name="rate" id="rate-3">
                            <label for="rate-3" class="fa fa-star"></label>
                            <input type="radio" name="rate" id="rate-2">
                            <label for="rate-2" class="fa fa-star"></label>
                            <input type="radio" name="rate" id="rate-1">
                            <label for="rate-1" class="fa fa-star"></label>        
                        </div>
                    </div>
                </div>
                </div>
                <div class="add-playlist">
                    <p><i class="fa fa-plus"></i><a id="btn-addplaylist" href="#"> &nbsp; Add to playlist</a></p>
                </div>
                <div id="show-playlist" class="">
                    <h3 class="title-ll">Your playlist</h3>
                    {{#each this.playlist}}
                    <a href="chords/add?maplaylist={{MAPLAYLIST}}">
                        <i class="fa fa-plus your-playlist" aria-hidden="true">
                           &nbsp; {{TENPLAYLIST}}
                        </i>
                    </a>
                    <br>
                    {{/each}}

                </div>
            </div>
        </div>
    </div>
</section>

{{#section 'js'}}
    <script>
        const btn_show = document.getElementById('btn-addplaylist')
        const show_pl = document.getElementById('show-playlist')

        btn_show.addEventListener("click", () => {
            show_pl.classList.add("show");
        });     

    </script>
{{/section}}